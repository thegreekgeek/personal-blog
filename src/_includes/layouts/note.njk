---
layout: layouts/base.njk
templateClass: tmpl-home
---

{# This is the template for individual blog notesâ€“it builds the front matter properties into the page #}

<div class="wrapper note">
  <article class="h-entry">
    <div class="note-header">
      {% if likeOf %}
        <p>Liked <a class="u-like-of" href="{{ likeOf }}">{{ likeOf }}</a></p>
      {% endif %}

      {% if inReplyTo %}
        <p>Replying to <a class="u-in-reply-to" href="{{ inReplyTo }}">{{ inReplyTo }}</a></p>
      {% endif %}

      {% if repostOf %}
        <p>Reposted <a class="u-repost-of" href="{{ repostOf }}">{{ repostOf }}</a></p>
      {% endif %}

      <a class="u-url" href="{{ page.url }}" style="display:none;"></a>
      <span class="p-author h-card" style="display:none;">Robert Y</span>
      <time class="dt-published" datetime="{{ date | isoDateString }}" style="display:none;">{{ date | htmlDateString }}</time>
    </div>

    {# Content from the body of the note markdown appears here #}
    <div class="e-content">
      {{ content | safe }}
    </div>

    <div class="controls">
    {# The previous and next note data is added in .eleventy.js #}
    {% if prevNote.url %}
      <p>
        <strong>Previous note</strong>: 
        <a class="previous" href="{{ prevNote.url }}">{{ prevNote.data.date | htmlDateString  }}</a>
      </p>
    {% endif %}
    {% if nextNote.url %}
      <p>
        <strong>Next note</strong>: 
        <a class="next" href="{{ nextNote.url }}">{{ nextNote.data.date | htmlDateString  }}</a>
      </p>
    {% endif %}
    </div>
  </article>
</div>
